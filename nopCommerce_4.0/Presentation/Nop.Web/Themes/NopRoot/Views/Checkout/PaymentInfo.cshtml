@model CheckoutPaymentInfoModel
@{
    Layout = "_ColumnsOne";

    //page class
    Html.AppendPageCssClassParts("html-checkout-page");
    Html.AppendPageCssClassParts("html-payment-info-page");
}
@await Component.InvokeAsync("CheckoutProgress", new { step = CheckoutProgressStep.Payment })
<div class="container">
    <div class="row">
        <div class="col-lg-12">


            <div class="panel panel-default form-panel">
                <div class="panel-heading">
                    <h3>@T("Checkout.PaymentInfo")</h3>
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-12 cart-box-wr">


                            <div class="coupon-box offer offer-default">


                                <div class="hint">
                                    @using (Html.BeginRouteForm("CheckoutPaymentInfo", FormMethod.Post))
                                    {
                                        <div class="info">
                                            @await Component.InvokeAsync(Model.PaymentViewComponentName)
                                        </div>

                                        <div class="text-right">
                                            <input type="submit" name="nextstep" value="@T("Checkout.NextButton")" class="btn btn-default" />
                                        </div>
                                        <div class="alert">
                                            <div asp-validation-summary="ModelOnly" class="message-error"></div>
                                        </div>
                                    }

                                </div>




                            </div>




                        </div>



                    </div>
                    @await Component.InvokeAsync("Widget", new { widgetZone = "checkout_payment_info_bottom" })
                    <div class="row">

                        <div class="col-lg-12 box-block">
                            <div class="box-heading">
                                <h4>@T("Checkout.OrderSummary")</h4>
                            </div>

                            <div class="box-content">
                                @await Component.InvokeAsync("OrderSummary", "ShoppingCart")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
