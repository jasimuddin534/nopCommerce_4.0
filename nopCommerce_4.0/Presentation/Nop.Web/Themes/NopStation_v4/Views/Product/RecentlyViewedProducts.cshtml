@model IList<ProductOverviewModel>
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.RecentlyViewedProducts").Text);
    //page class
    Html.AppendPageCssClassParts("html-recently-viewed-products-page");
}
@section heading {
    <div class="page-title">
        <h2 class="text-uppercase font-bold text-white"> @T("Products.RecentlyViewedProducts") </h2>
    </div>
}
<div class="page recently-viewed-products-page">
    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="product-grid">
                <div class="item-grid">
                    <div class="row">
                        @foreach (var product in Model)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="item-box">
                                    @await Html.PartialAsync("_ProductBox", product)
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
