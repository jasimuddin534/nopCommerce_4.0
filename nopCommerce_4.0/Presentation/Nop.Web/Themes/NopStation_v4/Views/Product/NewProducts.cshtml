@model IList<ProductOverviewModel>
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.NewProducts").Text);
    //page class
    Html.AppendPageCssClassParts("html-recently-added-products-page");
}
@section heading {
    <div class="page-title">
        <h2 class="text-uppercase font-bold text-white"> @T("Products.NewProducts") </h2>
    </div>
}
    <div class="page recently-added-products-page">
        <div class="">
            <div class="page-title text-right mb-1">
                <a href="@Url.RouteUrl("NewProductsRSS")" class="link-rss bg-orange btn btn-sm" title="@T("Products.NewProducts.RSS.Hint")">@T("Products.NewProducts.RSS")</a>
            </div>
            <div class="page-body">
                    @if (Model.Count > 0)
                    {
                            <div class="product-grid">
                                <div class="item-grid">
                                    <div class="row">
                                        @foreach (var product in Model)
                                        {
                                            <div class="col-lg-4 col-md-6">
                                                <div class="item-box">
                                                    @await Html.PartialAsync("_ProductBox", product)
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                    }
            </div>
        </div>
    </div>
