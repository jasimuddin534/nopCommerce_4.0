@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
<div class="container body_products product-grid home-page-product-grid">

     <h2 class="body_title_text text-uppercase text-center"> @T("HomePage.Products") </h2>

    <div class="col-md-push-4 col-md-12 col-sm-12">
        <div class="row">
            <div class="row item-grid">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-6 item-box">
                        @await Html.PartialAsync("_ProductBox", item)
                    </div>
                    <!--PRODUCTS 1 -->
                }
            </div>

        </div>
    </div>

    <div class="col-sm-3 see-all-products-button"> <a class="text-white font-bold text-uppercase mb-5" href="#"> see all products</a> </div>


</div>
}