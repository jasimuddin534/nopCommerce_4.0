@model FooterModel
@using Nop.Core
@using Nop.Core.Domain.Tax
@inject IWorkContext workContext;


<div class="bg-white">
    @await Component.InvokeAsync("NewsletterBox")
    <div class="footer_container bg-white">
        <div class="footer_logo text-center">
            <img src="~/Themes/NopStation_v4/Content/images/footer_logo.png" class="img-fluid" alt="themes">
        </div>
        <div class="container">
            <div class="row footer_box_margin">
                <div class="col-sm-3">
                    <div class="footer-block customer-service">
                        <h6 class="text-uppercase font-bold">@T("Footer.CustomerService")</h6>
                        <ul class="list">
                            <li><a href="@Url.RouteUrl("ProductSearch")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Search")</a> </li>
                            @if (Model.NewsEnabled)
                            {
                                <li><a href="@Url.RouteUrl("NewsArchive")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("News")</a></li>
                            }
                            @if (Model.BlogEnabled)
                            {
                                <li><a href="@Url.RouteUrl("Blog")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Blog")</a></li>
                            }
                            @if (Model.ForumEnabled)
                            {
                                <li><a href="@Url.RouteUrl("Boards")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Forum.Forums")</a></li>
                            }
                            @if (Model.RecentlyViewedProductsEnabled)
                            {
                                <li><a href="@Url.RouteUrl("RecentlyViewedProducts")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Products.RecentlyViewedProducts")</a></li>
                            }
                            @if (Model.CompareProductsEnabled)
                            {
                                <li><a href="@Url.RouteUrl("CompareProducts")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Products.Compare.List")</a></li>
                            }
                            @if (Model.NewProductsEnabled)
                            {
                                <li><a href="@Url.RouteUrl("NewProducts")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Products.NewProducts")</a></li>
                            }
                            @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn2).ToList())
                            {
                                <li><a href="@Url.RouteUrl("Topic", new { SeName = topic.SeName })"><i class="fa fa-angle-right" aria-hidden="true"></i> @topic.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="footer-block my-account">
                        <h6 class="text-uppercase font-bold">@T("Footer.MyAccount")</h6>
                        <ul class="list">
                            <li><a href="@Url.RouteUrl("CustomerInfo")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Account.MyAccount")</a></li>
                            <li><a href="@Url.RouteUrl("CustomerOrders")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Account.CustomerOrders")</a></li>
                            <li><a href="@Url.RouteUrl("CustomerAddresses")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Account.CustomerAddresses")</a></li>
                            @if (Model.ShoppingCartEnabled)
                            {
                                <li><a href="@Url.RouteUrl("ShoppingCart")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("ShoppingCart")</a></li>
                            }
                            @if (Model.WishlistEnabled)
                            {
                                <li><a href="@Url.RouteUrl("Wishlist")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Wishlist")</a></li>
                            }
                            @if (Model.AllowCustomersToApplyForVendorAccount)
                            {
                                <li><a href="@Url.RouteUrl("ApplyVendorAccount")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Vendors.ApplyAccount")</a></li>
                            }
                            @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn3).ToList())
                            {
                                <li><a href="@Url.RouteUrl("Topic", new { SeName = topic.SeName })"><i class="fa fa-angle-right" aria-hidden="true"></i> @topic.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="footer-block information">
                        <h6 class="text-uppercase font-bold">@T("Footer.Information")</h6>
                        <ul class="list">
                            @if (Model.SitemapEnabled)
                            {
                                <li><a href="@Url.RouteUrl("Sitemap")"><i class="fa fa-angle-right" aria-hidden="true"></i> @T("Sitemap")</a></li>
                            }
                            @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn1).ToList())
                            {
                                <li><a href="@Url.RouteUrl("Topic", new { SeName = topic.SeName })"><i class="fa fa-angle-right" aria-hidden="true"></i> @topic.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="footer-block my-account">
                        <h6 class="text-uppercase font-bold">CONTACT US</h6>
                        <ul class="list">
                            <li><a href="@Url.RouteUrl("ContactUs")">@T("ContactUs")</a></li>
                            <li><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> content</a></li>
                            <li><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> content</a></li>
                            <li><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> content</a></li>
                            <li><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> content</a></li>
                            <li><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> content</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-block follow-us">
                <div class="social">
                    @await Component.InvokeAsync("SocialButtons")
                </div>

            </div>
        </div>
        <div class="copyright_container">

            <div class="container">

                <div class="row">
                    <div class="col-sm-6">
                        <div class="footer-info">
                            <span class="footer-disclaimer">@T("Content.CopyrightNotice", DateTime.Now.Year, Model.StoreName)</span>
                            @if (Model.DisplayTaxShippingInfoFooter)
                            {
                                var inclTax = workContext.TaxDisplayType == TaxDisplayType.IncludingTax;
                                <span class="footer-tax-shipping">
                                    @T(inclTax ? "Footer.TaxShipping.InclTax" : "Footer.TaxShipping.ExclTax", Url.RouteUrl("Topic", new { SeName = Html.GetTopicSeName("shippinginfo") }))
                                </span>
                            }
                        </div>
                        @if (!Model.HidePoweredByNopCommerce)
                        {
                            <div class="footer-powered-by">
                                @*Would you like to remove the "Powered by nopCommerce" link in the bottom of the footer?
                                    Please find more info at https://www.nopcommerce.com/copyrightremoval.aspx*@
                                Powered by <a href="https://www.nopcommerce.com/">nopCommerce</a>
                            </div>
                        }
                        @await Component.InvokeAsync("StoreThemeSelector")
                    </div>
                    <div class="col-sm-6 text-right">
                        Pay With
                        <i class="fa fa-cc-visa" aria-hidden="true"></i>
                        <i class="fa fa-cc-amex" aria-hidden="true"></i>
                        <i class="fa fa-cc-discover" aria-hidden="true"></i>
                        <i class="fa fa-cc-mastercard" aria-hidden="true"></i>

                    </div>

                </div>

            </div>



        </div>

    </div>
</div>

<a href="#" class="scrollup" style=""> <i class="fa fa-angle-double-up" aria-hidden="true"></i> </a>

<script type="text/javascript" asp-location="Footer">
    $(document).ready(function () {
        $('.footer-block .title').click(function () {
            var e = window, a = 'inner';
            if (!('innerWidth' in window)) {
                a = 'client';
                e = document.documentElement || document.body;
            }
            var result = { width: e[a + 'Width'], height: e[a + 'Height'] };
            if (result.width < 769) {
                $(this).siblings('.list').slideToggle('slow');
            }
        });
    });
</script>
<script type="text/javascript" asp-location="Footer">
    $(document).ready(function () {
        $('.block .title').click(function () {
            var e = window, a = 'inner';
            if (!('innerWidth' in window)) {
                a = 'client';
                e = document.documentElement || document.body;
            }
            var result = { width: e[a + 'Width'], height: e[a + 'Height'] };
            if (result.width < 1001) {
                $(this).siblings('.listbox').slideToggle('slow');
            }
        });
    });
</script>